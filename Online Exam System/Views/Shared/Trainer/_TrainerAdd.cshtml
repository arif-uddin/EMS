@model Models.ViewModels.TrainerVM.TrainerAddVm

<h1 class="text-center">Trainer Add</h1>
<div style="padding:0% 20% 0% 20% ">
    @using (Html.BeginForm("GetTrainerCreatePartial", "Trainer", FormMethod.Post, new {enctype = "multipart/form-data", id = "LoadOrganizationAddPage"}))
    {
       
    <br />
        <div class="form-group row">
            <label class="col-md-4">Select Organization</label>
            <div class="col-md-8 text-center">
                @Html.DropDownListFor(c => c.Id, Model.OrganizationsLookup, "--Select Organization--",new {@class= "form-control text-center"})

            </div>
        </div>
        
        <div class="form-group row">
            <label class="col-md-4">Select Course</label>
            <div class="col-md-8">
                @Html.DropDownListFor(c => c.Id, Model.CoursesLookup, new {@class= "form-control"})

            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4">Select Batch</label>
            <div class="col-md-8">
                @Html.DropDownListFor(c => c.Id, Model.BatchLookup, new {@class= "form-control"})
            </div>
        </div>

        <div class="form-group row">
            <label  class="col-md-4">Name</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Name, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4">Contact No</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.ContactNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.ContactNo, null, new { @class = "text-danger" })
            </div>
        </div>

         <div class="form-group row">
            <label class="col-md-4">Email Address</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Email, null, new { @class = "text-danger" })
            </div>
        </div>

          <div class="form-group row">
            <label class="col-md-4">Address Line 1</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.AddressLine1, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.AddressLine1, null, new { @class = "text-danger" })
            </div>
        </div>

          <div class="form-group row">
            <label class="col-md-4">Address Line 1</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.AddressLine2, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.AddressLine2, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4">Address Line 1</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.AddressLine2, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.AddressLine2, null, new { @class = "text-danger" })
            </div>
        </div>

         <div class="form-group row">
            <label class="col-md-4">Postal Code</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.PostalCode, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.PostalCode, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4">City</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.City, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-md-4">Country</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.Country, new { @class = "form-control" })
                @Html.ValidationMessageFor(c => c.Country, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row col-md-2">

            <label class="col-md-4"for="file">Filename:</label>
            <input class="col-md-8 position-relative" type="file" name="file" id="file" required/>

        </div>
 
        <br/>
        <div class="form-group text-right ">
            <button type="submit" class="btn btn-success col-2">Submit</button>
        </div>

    }
</div>

