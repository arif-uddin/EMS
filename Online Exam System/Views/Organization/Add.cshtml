
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Organization Add</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
   <div class="container">
    <h1>Organization Add</h1>
    <div>
        <form>

            <div class="form-group row">
                <label class="col-md-4">Organization Name</label>
                <input type="text" id="Name" class="form-control col-8" placeholder="Enter Organization Name"/>
            </div>

            <div class="form-group row">
                <label class="col-md-4">Code</label>
                <input type="text" id="Code" class="form-control col-8"/>
            </div>

            <div class="form-group row">
                <label class="col-md-4">Course Duration</label>
                <input type="text" id="CourseDuration" class="form-control col-8" placeholder="00 months"/>
            </div>

            <div class="form-group row">
                <label class="col-md-4">Credit</label>
                <input type="text" id="CourseCredit" class="form-control col-8"/>
            </div>

            <div class="form-group row">
                <label class="col-md-4">Tags</label>
                <input type="text" id="tags" class="form-control col-8" placeholder="Enter Course Name"/>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success col-2">Submit</button>
            </div>
          
          </form>
        </div>
    </div>  
    <script src="~/Scripts/bootstrap.js"></script>
</body>
</html>
